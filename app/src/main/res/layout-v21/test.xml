<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.nat.advice_nation.Base.DashboardActivity"

    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="0dp"

            >

            <!--first row-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="0dp"
                android:weightSum="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:onClick="onClickButton"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:background="@drawable/border"
                    android:textSize="@dimen/text_size_dashboard"
                    android:backgroundTint="@color/dashboard_icon1"
                    android:text="@string/dashboard_ictext1"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"

                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:onClick="onClickButton"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:background="@drawable/border"
                    android:textSize="@dimen/text_size_dashboard"
                    android:backgroundTint="@color/dashboard_icon2"
                    android:text="@string/dashboard_ictext2"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"

                    android:id="@+id/button" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:onClick="onClickButton"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_dashboard"
                    android:backgroundTint="@color/dashboard_icon3"
                    android:text="@string/dashboard_ictext3"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"

                    />

                <!--first row-->
            </LinearLayout>

            <!--Second row-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="0dp"
                android:weightSum="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/dashboard_icon4"
                    android:text="@string/dashboard_ictext4"
                    android:singleLine="true"
                    android:background="@drawable/border"
                    android:textSize="@dimen/text_size_dashboard"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"

                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/dashboard_icon5"
                    android:text="@string/dashboard_ictext5"
                    android:singleLine="true"
                    android:background="@drawable/border"
                    android:textSize="@dimen/text_size_dashboard"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"

                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/dashboard_icon6"
                    android:text="@string/dashboard_ictext6"
                    android:singleLine="true"
                    android:background="@drawable/border"
                    android:textSize="@dimen/text_size_dashboard"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"

                    />


            </LinearLayout>

            <!--third row-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="0dp"
                android:weightSum="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/dashboard_icon1"
                    android:text="@string/dashboard_ictext7"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_dashboard"

                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/dashboard_icon2"
                    android:text="@string/dashboard_ictext8"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_dashboard"


                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/dashboard_icon3"
                    android:text="@string/dashboard_ictext9"
                    android:textColor="@color/tabSelectedIconColor"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_dashboard"


                    />


            </LinearLayout>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>