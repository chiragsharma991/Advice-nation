<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp"
            app:theme="@style/AppTheme"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

            <RelativeLayout
                android:id="@+id/bst_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"

                >

                <RelativeLayout
                    android:id="@+id/bst_Rel_image_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/detail_list_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@color/color_bg"

                        />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@+id/bst_Rel_image_child"
                    android:gravity="center_horizontal">

                    <!--Buy one-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">
                            <!---->

                            <TextView
                                android:id="@+id/detail_list_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="Buy One Get One"
                                android:textColor="@color/text_dark"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"
                                />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="end"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/detail_list_time"
                                    android:text="03:45 pm"
                                    android:singleLine="true"
                                    android:textColor="@color/text_light"
                                    android:textSize="@dimen/text_size_large"
                                    />


                            </RelativeLayout>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/bst_lineOne_child"
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_alignStart="@+id/bst_head_child"
                            android:layout_marginTop="5dp"
                            android:background="@color/text_divider" />
                        <!--Promo sales-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.35"
                                android:singleLine="true"
                                android:id="@+id/detail_list_subtitle"
                                android:text="Sales(U)"
                                android:textColor="@color/text_light"
                                android:textSize="@dimen/text_size_large"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.2"
                                android:text=":"
                                android:textColor="@color/text_light"
                                android:textSize="@dimen/text_size_large"
                                />

                            <TextView
                                android:id="@+id/bestInvent_Sale"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.45"
                                android:text="100"
                                android:textColor="@color/text_light"
                                android:textSize="@dimen/text_size_large"
                                />

                        </LinearLayout>
                        <!--Promo Sales(U)-->

                        <LinearLayout
                            android:id="@+id/top_fav"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            >

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:stepSize="0.1"
                                android:focusable="false"
                                android:id="@+id/ratingBar"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:numStars="5"
                                android:transformPivotX="0dp"
                                android:transformPivotY="10dp"

                                />
                            <!--<ToggleButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/give_star"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textOff=""
                                android:textOn=""/>
                            <ToggleButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/give_star"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textOff=""
                                android:textOn=""/>
                            <ToggleButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/give_star"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textOff=""
                                android:textOn=""/>-->


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            >
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>
</RelativeLayout>